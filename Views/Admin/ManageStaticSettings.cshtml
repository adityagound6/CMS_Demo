@model ManageStatics
@{

    ViewBag.Title = "Manage Statics Settings";
}

<div class="shadow-lg p-3 mb-5 bg-white rounded ">
    <form enctype="multipart/form-data" class="card-body" method="post" asp-action="ManageStaticSettings" asp-controller="Admin">
        <h3 class="text-center">@ViewBag.Title</h3>
        <hr />

        <div class="form-group row">
            <label asp-for="SiteLogo" class="col-form-label fw-bolder"></label>
            <div class="custom-file">
                <input asp-for="SiteLogo" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Footer" class="col-form-label fw-bolder"></label>
            <div class="col">
                <textarea asp-for="Footer" id="froala-editor"></textarea>
                @*<span asp-validation-for="Footer" class="text-danger"></span>*@
            </div>
        </div>



        <div class="form-group row my-3">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>

    </form>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                var ext = fileName.split('.').pop().toLowerCase();
                if ($.inArray(ext, ['gif', 'png', 'jpg', 'jpeg', 'mp4']) == -1) {
                    alert('invalid extension!');
                }
                else {
                    $(this).next('.custom-file-label').html(fileName);
                }
            });
        });
    </script>
}