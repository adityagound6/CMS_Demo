@model AddSubUserViewModel;


@{
    ViewBag.Title = "Add Sub User";
}

<div class="shadow-lg p-3 mb-5 bg-white rounded col-9">
    <h3 class="text-center">@ViewBag.Title</h3>
    <form class="card-body" asp-action="AddSubUser" asp-controller="Admin" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row mb-2">
            <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-2">
            <label asp-for="Password" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>


    </form>
</div>
