@model AddSubUserViewModel;


@{
    ViewBag.Title = "Add Sub User";
}

<div class="shadow-lg p-3 mb-5 bg-white rounded col-9">
    <form class="card-body" asp-action="AddSubUser" asp-controller="Admin" method="post">
        <h3 class="text-center">@ViewBag.Title</h3>
        <hr />
        <div class="form-group row mb-2">
            <label asp-for="Email" class="col-sm-3 col-form-label fw-bolder">Email</label>
            <div class="col-sm-9">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row mb-2">
            <label asp-for="Password" class="col-sm-3 col-form-label fw-bolder">Password</label>
            <div class="col-sm-9">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row my-3">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <button type="submit" class="btn btn-success">Add Sub User</button>
            </div>
        </div>


    </form>
</div>
