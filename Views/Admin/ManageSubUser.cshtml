@model IEnumerable<Users>
@{ 
    ViewBag.Title = " Manange Sub User";
}

<div class="shadow-lg p-3 mb-5 bg-white rounded ">
    <form class="card-body">
        <h3 class="text-center">@ViewBag.Title</h3>
       <hr />
        <table class="table border-top-0">
            <thead>
                <tr >
                    <th  scope="col">Sr No.</th>
                    <th scope="col">User</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var count = 0;
                    foreach (var User in Model)
                    {
                        count++;
                        <tr>
                            <td scope="col">@count</td>
                            <td scope="col" class="fw-bold">@User.Email</td>
                            <td scope="col">
                            <a title="Edit" asp-controller="admin" asp-action="EditSubUser" asp-route-id="@User.UserId"><i class="fa fa-edit mr-3"></i></a>
                            <a title="Delete"  onclick="DeleteUser(@User.UserId, '@User.Email')"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </form>
</div>

@section Scripts{
<script>
    function DeleteUser(id, name) {
        if (confirm("Are You Sure To Delete This User: " + name) == true) {
            DeleteUserMethodCall(id);
        }
    }
    function DeleteUserMethodCall(id) {
        $.ajax ({
            url: "/Admin/DeleteSubUser/" + id,
            type: "Post",
            data: {},
            success: function (data) {
                if (data == true) {
                    alert("User deleted Successfully.")
                    window.location.reload();
                }
                else {
                    alert("Please Check the User roles and remove then Fisrt.")
                }
            },
            error: function () { }
        });
    }

</script>

 }