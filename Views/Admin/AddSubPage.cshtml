@model AddSubPageViewModel
@{
    ViewBag.Title = "Add Sub Page";
}
<div class="shadow-lg p-3 mb-5 bg-white rounded col-9 card">
    <form class="card-body" method="post">
        <h3 class="text-center">@ViewBag.Title</h3>
        <hr />
        @*<input type="hidden" asp-for="PageName" />*@
        <div class="form-group row">
            <label class="col-form-label fw-bolder" asp-for="PageName"></label>
            <select asp-for="PageId" id="pageid" class="custom-select mr-sm-2"
                    asp-items='@(new SelectList(ViewBag.PageList, "PageId", "PageName"))'>
                <option value="">--Select Page--</option>
            </select>
        </div>

        <div class="form-group row">
            <label class="col-form-label fw-bolder">Sub Page Name</label>
            <div class="col">
                <input asp-for="PageName" class="form-control mr-sm-2" style="text-transform: capitalize;"/>
                <span asp-validation-for="PageName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label fw-bolder" asp-for="Description"></label>
            <div class="col" id="dec">
                <textarea id="froala-editor" asp-for="Description"> </textarea>
                      
            </div>
        </div>


        <div class="form-group row my-3">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Add Sub Page</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        new FroalaEditor('textarea#froala-editor')
    </script>
}
